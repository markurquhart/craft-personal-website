{% extends "_layout.twig" %}

{% block content %}
    <h1>{{ entry.title ?? 'Welcome' }}</h1>

    <div class="content">
        {% if entry and entry.description %}
            {{ entry.description }}
        {% else %}
            <p>Welcome to my personal website! This is a personal branding hub showcasing my photography, freelance work, creative projects, thoughts, and travels.</p>
        {% endif %}
    </div>

    {% if entry.featuredImage|length %}
        <div class="featured-image" style="margin: 2rem 0;">
            {% set image = entry.featuredImage.one() %}
            {% if image %}
                <img src="{{ image.url }}" alt="{{ image.title }}" style="max-width: 100%; height: auto; border-radius: 8px;">
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
