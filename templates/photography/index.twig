{% extends "_layout.twig" %}

{% block content %}
    <h1>Photography</h1>

    <p style="margin-bottom: 2rem;">Browse my photography by category.</p>

    {% set categories = craft.entries()
        .section('photography')
        .type('category')
        .level(1)
        .orderBy('title ASC')
        .all() %}

    {% if categories|length %}
        <ul class="entry-list">
            {% for category in categories %}
                <li>
                    {% if category.featuredImage|length %}
                        {% set image = category.featuredImage.one() %}
                        <img src="{{ image.url }}" alt="{{ image.title }}" style="width: 100%; height: 250px; object-fit: cover; border-radius: 8px; margin-bottom: 1rem;">
                    {% endif %}

                    <h3><a href="{{ category.url }}">{{ category.title }}</a></h3>

                    <div class="meta">
                        {% set albumCount = craft.entries()
                            .section('photography')
                            .type('album')
                            .descendantOf(category)
                            .count() %}
                        {% if albumCount %}
                            üìÅ {{ albumCount }} album{{ albumCount != 1 ? 's' : '' }}
                        {% endif %}

                        {% set photoCount = craft.entries()
                            .section('photography')
                            .type('photo')
                            .descendantOf(category)
                            .count() %}
                        {% if photoCount %}
                            | üì∏ {{ photoCount }} photo{{ photoCount != 1 ? 's' : '' }}
                        {% endif %}
                    </div>

                    {% if category.description %}
                        <p>{{ category.description|length > 250 ? category.description|slice(0, 250) ~ '...' : category.description }}</p>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p style="padding: 2rem; background: #f8f9fa; border-radius: 8px; text-align: center;">
            No photography categories yet. Create some in the Craft control panel!
        </p>
    {% endif %}
{% endblock %}
